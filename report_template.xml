<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="qr_report_fe_invoice_document" inherit_id="l10n_ar_afipws_fe.report_invoice_document">
		<xpath expr="//div[@class='col-8']" position="replace">
			<div t-if="o.journal_id.afip_ws" style="text-align: center; vertical-align: middle;" class="col-8">
                <span>
                    CAE: <t t-esc="o.afip_auth_code"/> - Fecha Vto. CAE: <t t-esc="o.afip_auth_code"/>
                </span>
                <div t-if="o.texto_modificado_qr">
                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', o.texto_modificado_qr, 250, 250)" style="width:180px;height:180px"/>
                </div>
            </div>
		</xpath>
    </template>
</odoo>
